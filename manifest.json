{
  "manifest_version": 3,
  "name": "ProtonPay",
  "version": "1.0.0",
  "description": "A minimal Chrome extension wallet for Bitcoin Lightning payments using Voltage Payments API",
  "permissions": [
    "storage",
    "activeTab",
    "windows"
  ],
  "host_permissions": [
    "http://localhost:3000/*",
    "https://api.voltageapi.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "ProtonPay"
  },
  "options_page": "options.html",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
